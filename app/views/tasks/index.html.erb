<% @tasks.each do |task| %>
  <input type="checkbox" name="completed" <%= task.completed ? "checked" : '' %>>
  <%= link_to task.title, task_path(task) %>
  <%= link_to content_tag(:i,"", class: ['fa-solid', 'fa-trash-can']),task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
<%= link_to "Add a task",  new_task_path %>
